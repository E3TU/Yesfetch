#!/bin/sh

#optional arguments
ARG1=${1:-color1}
colorname=${2:-}


#hostname
read -r host < /proc/sys/kernel/hostname

#os (distro)
read -r kernel < /proc/sys/kernel/osrelease
. /etc/os-release

#de
de=$DESKTOP_SESSION;

#up
up=$(uptime -p | awk '{ print substr( $0, 4 ) }' | sed 's|[,]||g')


#wm
  [ ! "$wm" ] && [ "$DISPLAY" ] && command -v xprop >/dev/null && {
    id=$(xprop -root -notype _NET_SUPPORTING_WM_CHECK)
    id=${id##* }
    wm=$(xprop -id "$id" -notype -len 100 -f _NET_WM_NAME 8t |
      grep '^_NET_WM_NAME' | cut -d\" -f 2)
  }

#kernel
read -r _ _ version _ < /proc/version
ke=${version%%-*}

#colors
white='[37m'
red='[31m'
green='[32m'
yellow='[33m'
blue='[34m'
cyan='[36m'
purple='[35m'

#Default colors
welcometext=$green
infotext=$blue
reset='[0m'


if [ "$colorname" = "white" ]; then
  echo "test"
  welcometext=$white
fi

if [ "$colorname" = "red" ]; then
  echo "test"
  welcometext=$red
fi

if [ "$colorname" = "green" ]; then
  echo "test"
  welcometext=$green
fi

if [ "$colorname" = "yellow" ]; then
  echo "test"
  welcometext=$yellow
fi

if [ "$colorname" = "blue" ]; then
  echo "test"
  welcometext=$blue
fi

if [ "$colorname" = "cyan" ]; then
  echo "test"
  welcometext=$cyan
fi

if [ "$colorname" = "purple" ]; then
  echo "test"
  welcometext=$purple
fi

#output
printf '%s\n' "
  ${infotext}os${white} ~ ${PRETTY_NAME}
  ${infotext}sh${white} ~ ${SHELL##*/}
  ${infotext}de${white} ~ ${de}
  ${infotext}wm${white} ~ ${wm}
  ${infotext}kr${white} ~ ${ke}
  ${infotext}up${white} ~ ${up}

  welcome to ${welcometext}${host}${reset}, ${welcometext}${USER}${reset}
"

if [ ! -z $color ]
then
  echo "You chose the color %s\n" "$color"
fi
